<div>
  <div>
    <h1>
      List of all functions
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new function
    </h2>

    <form action="/insert_function" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="applications_count_box">
          Applications count
        </label>

        <input type="text" id="applications_count_box" name="query_applications_count">
      </div>

      <button>
        Create function
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Applications count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_functions.each do |a_function| %>
      <tr>
        <td>
          <%= a_function.id %>
        </td>

        <td>
          <%= a_function.name %>
        </td>

        <td>
          <%= a_function.applications_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_function.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_function.updated_at) %> ago
        </td>

        <td>
          <a href="/functions/<%= a_function.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
